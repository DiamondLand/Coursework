<Window x:Class="Coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Пользователи" Click="ShowUsers_Click" FontFamily="Yu Gothic UI Semibold" Height="25"/>
            <Button Content="Подключиться к базе данных" Click="ConnectButton_Click" FontFamily="Yu Gothic UI Semibold" FontSize="12" Width="190" Height="25"/>
            <Button Content="Отключиться от базы данных" Click="DisconnectButton_Click" FontFamily="Yu Gothic UI Semibold" FontSize="12" Width="190" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
